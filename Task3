list1 = [1,2,3]
print(list1)
def trot(list1, num, indx):
    if num > 1:
        if list1[num-indx] > list1[num-indx-1]:
            list1[num-indx], list1[num-indx-1] = list1[num-indx-1], list1[num-indx]
            print(list1)
        return trot(list1, num, indx+1)
    else:
        return

trot(list1, len(list1), 1)
